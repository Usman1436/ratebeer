<div id="<%= dom_id brewery %>">
  <p>
    <%# <strong>Name:</strong> %>
    <h2><%= link_to brewery.name, brewery %></h2>
  </p>

  <p>
    <strong>Year:</strong>
    <i>Established in <%= brewery.year %></i>
  </p>

  Beers Count: <%= brewery.beers.count %>

  <p>
    <% brewery.beers.each do |beer| %>
      <%= link_to beer.name, beer %>
    <% end %>
  </p>
  <%= link_to 'list of beers', beers_path %>
</div>
