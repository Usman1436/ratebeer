<p style="color: green"><%= notice %></p>

<h1>Beers</h1>

<div id="beers">
  <% @beers.each do |beer| %>
    <%#= render beer %>
    <%# <p> %>
      <%#= link_to "Show this beer", beer %>
    <%# </p> %>
    <div id="<%= dom_id beer %>">
      <p>
        <strong>Name:</strong>
        <%= link_to beer.name, beer %>
      </p>

      <p>
        <strong>Style:</strong>
        <%= beer.style %>
      </p>

      <p>
        <strong>Name:</strong>
        <%= link_to beer.brewery.name, beer.brewery %>
      </p>

      <p>
        <strong>Brewery:</strong>
        <%= beer.brewery_id %>
      </p>

    </div>
  <% end %>
</div>

<%= link_to "New beer", new_beer_path %>
